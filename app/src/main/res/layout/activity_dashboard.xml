<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="60dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/backarrow" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- Profile Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/foxshadow" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profileImage"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="50dp"
                    android:text="Shihab"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/times_new_roman"
                    android:textColor="#1B4332"/>

                <TextView
                    android:id="@+id/monthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/poppinslight"
                    android:text="Joined August 2025"
                    android:textSize="14sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Statistics Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Statistics"
            android:layout_marginLeft="25dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1B4332"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/stat_box_bg"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical">

                <!-- Icon on the left -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/downarrow"
                android:layout_marginEnd="15dp"
                android:contentDescription="CO2 icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/co2Saved"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="0.00 kg"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppinslight"
                        android:text="CO2e saved"
                        android:textSize="15sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/stat_box_bg"
                android:padding="10dp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical">

                <!-- Icon on the left -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/staricon"
                android:layout_marginEnd="15dp"
                android:contentDescription="Talipoints icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/taliPoints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="0"
                        android:fontFamily="@font/poppinsmedium"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppinslight"
                        android:text="Talipoints"
                        android:textSize="15sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Carbon History Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="#1B4332"
            android:layout_marginLeft="25dp"
            android:text="Carbon History"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Chart Container with Vertical Axis -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="24dp"
            android:layout_marginBottom="8dp">

            <!-- Vertical Axis Labels -->
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="3.0"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="2.5"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="2.0"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="1.5"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="1.0"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0.5"
                    android:textSize="12sp"
                    android:textColor="#757575"/>
            </LinearLayout>

            <!-- Chart Bars Container -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="1">

                <!-- Chart Bar Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/chartContainer">

                    <!-- Home Bar -->
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:padding="4dp">
                        <View
                            android:id="@+id/homeBar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="#4CAF50"
                            android:minHeight="10dp"/>
                    </LinearLayout>

                    <!-- Travel Bar -->
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:padding="4dp">
                        <View
                            android:id="@+id/travelBar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="#FF9800"
                            android:minHeight="10dp"/>
                    </LinearLayout>

                    <!-- Food Bar -->
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_marginLeft="20dp"
                        android:background="@android:color/transparent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:padding="4dp">
                        <View
                            android:id="@+id/foodBar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="#F44336"
                            android:minHeight="10dp"/>
                    </LinearLayout>

                    <!-- Others Bar -->
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:padding="4dp">
                        <View
                            android:id="@+id/othersBar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="#2196F3"
                            android:minHeight="10dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Left Border -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="#000000" />

                <!-- Bottom Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="#000000" />
            </FrameLayout>

        </LinearLayout>

        <!-- Category Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="-30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:text="Travel"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:text="Food"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:text="Others"
                android:textAlignment="center"
                android:textColor="#000000"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>