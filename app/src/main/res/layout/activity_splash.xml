<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6EDC8"
    android:id="@+id/main"> <!-- Ensure the root layout has the correct ID here -->


    <!-- Fox Image -->
    <ImageView
        android:id="@+id/fox_image"
        android:layout_width="261dp"
        android:layout_height="311dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/sage4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- GreenTail Image -->
    <ImageView
        android:id="@+id/svg_image"
        android:layout_width="227.52dp"
        android:layout_height="74.46dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/greentail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fox_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
