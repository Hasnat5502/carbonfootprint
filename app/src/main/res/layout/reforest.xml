<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="60dp"
        android:paddingLeft="30dp"
        android:orientation="vertical"
        android:gravity="start"
        android:background="@drawable/headerbacground">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Clean Water for Schools"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- SDG Icons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/gif1"
                android:scaleType="fitCenter"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/gif2"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Spend Card -->
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="150dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title with arrow -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spend \nTailpoints"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="Arrow" />
            </RelativeLayout>

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Support clean water access for kids in remote areas. NGOs use donations to install filters and tanks."
                android:textColor="#444444"
                android:textSize="12sp" />

            <!-- Progress Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/progress_bar_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Fill -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/progress_bar_fill" />

                    <!-- Empty -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="70"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Progress Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"
                android:text="193,200 Tailpoints received"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Available Tailpoints -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Tailpoints"
                android:textColor="#1B4332"
                android:background="@android:color/transparent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rewardroundedbox"
                android:padding="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/staricon"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/taliPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Minus -->
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus"
                android:background="@android:color/transparent"
                android:contentDescription="minus"/>

            <!-- Value -->
            <TextView
                android:id="@+id/tv_points"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="10"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <!-- Plus -->
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:background="@android:color/transparent"
                android:contentDescription="plus"/>
        </LinearLayout>

        <!-- Spend Button -->
        <Button
            android:id="@+id/btn_spend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/button_circle2"
            android:text="Spend"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Bottom Nav -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@drawable/footer_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_alignParentBottom="true">

        <!-- Side space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.3" />

        <!-- Home Icon with background -->
        <ImageView
            android:id="@+id/main1"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:contentDescription="Home"
            android:gravity="center"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/fox" />

        <!-- Space between icons -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.2" />

        <!-- Search Icon with background -->
        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:contentDescription="Search"
            android:gravity="center"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/search" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.2" />

        <!-- Progress Icon with background -->
        <ImageView
            android:id="@+id/progress"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:contentDescription="Progress"
            android:gravity="center"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/progress" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.2" />

        <!-- Connect Icon with background -->
        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:contentDescription="Connect"
            android:background="@drawable/footer_icon_bg"
            android:src="@drawable/connect" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.2" />

        <!-- Reward Icon with background -->
        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/footer_icon_bg"
            android:contentDescription="Reward"
            android:src="@drawable/reward" />

        <!-- Side space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.3" />
    </LinearLayout>
</LinearLayout>
